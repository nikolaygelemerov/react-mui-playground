{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@dummy": ["./dummy"],
      "@dummy/*": ["./dummy/*"],
      "@managers": ["./managers"],
      "@managers/*": ["./managers/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@providers": ["./providers"],
      "@providers/*": ["./providers/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugins-css-modules"
      }
    ]
  },
  "exclude": ["node_modules"]
}
